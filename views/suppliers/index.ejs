<div class="container mt-4">
    <!-- Page Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h3 mb-0">
                <i class="fas fa-truck me-2"></i>
                Quản lý nhà cung cấp
            </h1>
            <p class="text-muted mb-0">Quản lý thông tin các nhà cung cấp</p>
        </div>
        <a href="/suppliers/create" class="btn btn-primary">
            <i class="fas fa-plus me-2"></i>
            Thêm nhà cung cấp
        </a>
    </div>

    <!-- Search -->
    <div class="card mb-4">
        <div class="card-body">
            <form method="GET" action="/suppliers">
                <div class="row">
                    <div class="col-md-10">
                        <div class="input-group">
                            <span class="input-group-text">
                                <i class="fas fa-search"></i>
                            </span>
                            <input type="text" class="form-control" name="search" 
                                   placeholder="Tìm kiếm nhà cung cấp..." 
                                   value="<%= search %>">
                        </div>
                    </div>
                    <div class="col-md-2">
                        <button type="submit" class="btn btn-outline-primary w-100">
                            <i class="fas fa-search me-1"></i>
                            Tìm
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <!-- Suppliers Table -->
    <div class="card">
        <div class="card-body">
            <% if (suppliers.length > 0) { %>
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead class="table-dark">
                            <tr>
                                <th>Tên nhà cung cấp</th>
                                <th>Địa chỉ</th>
                                <th>Liên hệ</th>
                                <th>Mô tả</th>
                                <th>Thao tác</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% suppliers.forEach(function(supplier) { %>
                                <tr>
                                    <td>
                                        <div>
                                            <strong class="text-primary"><%= supplier.name %></strong>
                                            <br><small class="text-muted">
                                                <i class="fas fa-calendar me-1"></i>
                                                Tạo: <%= new Date(supplier.createdAt).toLocaleDateString('vi-VN') %>
                                            </small>
                                        </div>
                                    </td>
                                    <td>
                                        <div>
                                            <i class="fas fa-map-marker-alt text-muted me-1"></i>
                                            <%= supplier.address %>
                                        </div>
                                    </td>
                                    <td>
                                        <div>
                                            <div class="mb-1">
                                                <i class="fas fa-phone text-muted me-1"></i>
                                                <a href="tel:<%= supplier.phone %>" class="text-decoration-none">
                                                    <%= supplier.phone %>
                                                </a>
                                            </div>
                                            <% if (supplier.email) { %>
                                                <div>
                                                    <i class="fas fa-envelope text-muted me-1"></i>
                                                    <a href="mailto:<%= supplier.email %>" class="text-decoration-none">
                                                        <%= supplier.email %>
                                                    </a>
                                                </div>
                                            <% } %>
                                        </div>
                                    </td>
                                    <td>
                                        <div class="text-truncate" style="max-width: 200px;" title="<%= supplier.description || '' %>">
                                            <%= supplier.description || 'Không có mô tả' %>
                                        </div>
                                    </td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            <a href="/suppliers/<%= supplier._id %>/edit" 
                                               class="btn btn-sm btn-outline-primary" title="Sửa">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <button type="button" class="btn btn-sm btn-outline-danger" 
                                                    onclick="deleteSupplier('<%= supplier._id %>', '<%= supplier.name %>')" 
                                                    title="Xóa">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            <% }); %>
                        </tbody>
                    </table>
                </div>
            <% } else { %>
                <div class="text-center py-5">
                    <i class="fas fa-truck fa-4x text-muted mb-3"></i>
                    <h4 class="text-muted">Không có nhà cung cấp</h4>
                    <p class="text-muted">
                        <% if (search) { %>
                            Không tìm thấy nhà cung cấp phù hợp với từ khóa tìm kiếm.
                        <% } else { %>
                            Chưa có nhà cung cấp nào trong hệ thống.
                        <% } %>
                    </p>
                    <a href="/suppliers/create" class="btn btn-primary">
                        <i class="fas fa-plus me-2"></i>
                        Thêm nhà cung cấp đầu tiên
                    </a>
                </div>
            <% } %>
        </div>
    </div>

    <!-- Pagination -->
    <% if (pagination.totalPages > 1) { %>
        <div class="mt-4">
            <nav aria-label="Supplier pagination">
                <ul class="pagination justify-content-center">
                    <% if (pagination.hasPrev) { %>
                        <li class="page-item">
                            <a class="page-link" href="?page=<%= pagination.prevPage %>&search=<%= search %>">
                                <i class="fas fa-chevron-left"></i>
                            </a>
                        </li>
                    <% } %>
                    
                    <% for (let i = 1; i <= pagination.totalPages; i++) { %>
                        <li class="page-item <%= pagination.page === i ? 'active' : '' %>">
                            <a class="page-link" href="?page=<%= i %>&search=<%= search %>">
                                <%= i %>
                            </a>
                        </li>
                    <% } %>
                    
                    <% if (pagination.hasNext) { %>
                        <li class="page-item">
                            <a class="page-link" href="?page=<%= pagination.nextPage %>&search=<%= search %>">
                                <i class="fas fa-chevron-right"></i>
                            </a>
                        </li>
                    <% } %>
                </ul>
            </nav>
        </div>
    <% } %>
</div>

<script>
function deleteSupplier(id, name) {
    if (confirm(`Bạn có chắc muốn xóa nhà cung cấp "${name}"?`)) {
        fetch(`/suppliers/${id}`, {
            method: 'DELETE',
            headers: {
                'Content-Type': 'application/json',
                'X-Requested-With': 'XMLHttpRequest'
            }
        })
        .then(response => {
            if (!response.ok) {
                throw new Error(`HTTP error! status: ${response.status}`);
            }
            return response.json();
        })
        .then(data => {
            if (data.success) {
                alert('Xóa nhà cung cấp thành công!');
                window.location.href = '/suppliers';
            } else {
                alert('Có lỗi xảy ra: ' + data.message);
            }
        })
        .catch(error => {
            console.error('Error:', error);
            alert('Có lỗi xảy ra khi xóa nhà cung cấp: ' + error.message);
        });
    }
}
</script>